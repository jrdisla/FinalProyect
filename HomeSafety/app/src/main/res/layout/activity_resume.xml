<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gris">  >

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gris">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relativelayout2"
            android:layout_width="fill_parent"
            android:layout_height="64dp" >
        <ImageView
            android:id="@+id/imageView2"
            android:src="@drawable/co2"
            android:layout_width="995dp"
            android:layout_height="45dp"
            android:layout_marginStart="103dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/co2" />
        <TextView
            android:id="@+id/co2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity=""
            android:textSize="20sp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_centerVertical="true"
            android:textStyle="italic"
            android:layout_alignParentStart="true" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relativelayout"
            android:layout_width="fill_parent"
            android:layout_height="64dp" >
        <ImageView
            android:id="@+id/imageView"
            android:src="@drawable/temp"
            android:layout_width="995dp"
            android:layout_height="45dp"
            android:layout_marginStart="106dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/temp" />

        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity=""
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />


            </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relativelayout3"
            android:layout_width="fill_parent"
            android:layout_height="64dp" >
        <ImageView
            android:id="@+id/imageView3"
            android:src="@drawable/hume"
            android:layout_width="995dp"
            android:layout_height="45dp"
            android:layout_marginStart="86dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/hum" />


        <TextView
            android:id="@+id/hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity=""
            android:textSize="20sp"

            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textStyle="italic"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relativelayout4"
            android:layout_width="fill_parent"
            android:layout_height="64dp" >
        <ImageView
            android:id="@+id/imageView4"
            android:src="@drawable/pg"
            android:layout_width="995dp"
            android:layout_height="45dp"

            android:layout_marginStart="91dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/gas" />
        <TextView
            android:id="@+id/gas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity=""

            android:textSize="20sp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity=""
            android:text="  Valores Promedio:"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart10"
            android:layout_width="353dp"
            android:layout_height="276dp" />


    </LinearLayout>

</ScrollView>